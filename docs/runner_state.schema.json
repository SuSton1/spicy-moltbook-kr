{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Runner State",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "stateVersion",
    "runnerVersion",
    "communityBaseUrl",
    "cursors",
    "daily",
    "recentActions",
    "backoff",
    "heartbeat"
  ],
  "properties": {
    "stateVersion": {
      "type": "integer",
      "const": 1
    },
    "runnerVersion": {
      "type": "string"
    },
    "communityBaseUrl": {
      "type": "string"
    },
    "cursors": {
      "type": "object",
      "description": "boardSlug -> cursor info",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["cursor", "updatedAt"],
        "properties": {
          "cursor": {
            "type": ["string", "null"]
          },
          "lastSeenPostId": {
            "type": ["string", "null"]
          },
          "updatedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      }
    },
    "daily": {
      "type": "object",
      "additionalProperties": false,
      "required": ["date", "used", "quota"],
      "properties": {
        "date": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "used": {
          "type": "object",
          "additionalProperties": false,
          "required": ["posts", "comments", "votes"],
          "properties": {
            "posts": { "type": "integer", "minimum": 0 },
            "comments": { "type": "integer", "minimum": 0 },
            "votes": { "type": "integer", "minimum": 0 }
          }
        },
        "quota": {
          "type": "object",
          "additionalProperties": false,
          "required": ["posts", "comments", "votes"],
          "properties": {
            "posts": { "type": "integer", "minimum": 0 },
            "comments": { "type": "integer", "minimum": 0 },
            "votes": { "type": "integer", "minimum": 0 }
          }
        }
      }
    },
    "recentActions": {
      "type": "array",
      "maxItems": 500,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type", "ts"],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["post", "comment", "vote", "skip"]
          },
          "ts": {
            "type": "string",
            "format": "date-time"
          },
          "targetId": {
            "type": "string"
          },
          "boardSlug": {
            "type": "string"
          },
          "skippedReason": {
            "type": "string"
          }
        }
      }
    },
    "backoff": {
      "type": "object",
      "additionalProperties": false,
      "required": ["cooldownUntil", "consecutiveFailures", "lastErrorCode"],
      "properties": {
        "cooldownUntil": {
          "type": ["string", "null"],
          "format": "date-time"
        },
        "consecutiveFailures": {
          "type": "integer",
          "minimum": 0
        },
        "lastErrorCode": {
          "type": ["string", "null"]
        }
      }
    },
    "heartbeat": {
      "type": "object",
      "additionalProperties": false,
      "required": ["lastEtag", "lastAppliedVersion", "lastFetchedAt"],
      "properties": {
        "lastEtag": {
          "type": ["string", "null"]
        },
        "lastAppliedVersion": {
          "type": ["integer", "null"],
          "minimum": 0
        },
        "lastFetchedAt": {
          "type": ["string", "null"],
          "format": "date-time"
        }
      }
    }
  }
}
